     <!-- asp-controller="ShopController" -->
<form method="post"  asp-action="BuyShopAction" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleInputName" class="form-label">Name: </label>
        <!-- asp-for="" ||  name="" -->
        <input type="text" class="form-control" id="exampleInputName" name="Name"  aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputPrice" class="form-label">Price: </label>
        <input type="number" class="form-control" id="exampleInputPrice" name="Price" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputQuantity" class="form-label">Quantity: </label>
        <input type="number" class="form-control" id="exampleInputQuantity" name="Quantity" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="exampleInputColor" class="form-label">Color: </label>
        <input type="text" class="form-control" id="exampleInputColor" name="Color" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label>وضعیت:</label>
        <div class="radio">
            <label><input type="radio" name="Status" value="OK">فعال</label>
        </div>
        <div class="radio">
            <label><input type="radio" name="Status" value="No">غیرفعال</label>
        </div>
    </div>
 <div class="mb-3">
        <label for="exampleInputFileUploadFile" class="form-label">UploadFile : </label>
        <input type="file" class="form-control" id="exampleInputFileUploadFile" name="UploadFile" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label for="date">تاریخ:</label>
        <input type="date" class="form-control" id="Date" name="Date">
    </div>
    <div class="mb-3">
        <label for="exampleInputDescription" class="form-label">Description: </label>
        <input type="text" class="form-control" id="exampleInputDescription" name="Description" aria-describedby="emailHelp">
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />

    <!-- <button type="submit" value="OK"  class="btn btn-primary"></button> -->
</form>