@model IEnumerable<shop_MahdiTaremi.Models.Product>

<h1>Index Shop</h1>  


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Color</th>
            <th scope="col">Status</th>
            <th scope="col">Date</th>
            <th scope="col">Description</th>
            <th scope="col">Edit</th>
            <th scope="col">Open</th>
            <th scope="col">Delete</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>

    <tbody>

     @foreach (var item in Model) {

            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.Color</td>
                <td>@item.Status</td>
                <td>@item.Date</td>
                <td>@item.Description</td>
                <td><input type="button" value="Edit" class="btn btn-light" /></td>
                <td><a href="/Shop/Show/?Id=@item.Id">Open</a></td>
                <td><a href="/Shop/Delete/?Id=@item.Id">Delete</a></td>
                <td><input type="button" value="Delete" class="btn btn-danger" /></td>
            </tr>
        }
       
    </tbody>
</table>
 
<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-sm-3">
            <img src="~/Uploads/@item.pic_1" style="width:100px;height:100px" />
            <p>@item.Name</p>
            <hr>
            <p>
                @{
                    string Price = ((item.Price * 0.2) + item.Price).ToString();
                }
                <span style="text-decoration:line-through;color:red">@Price</span>
                <span style="color:green">@item.Price</span>
            </p>
            <!-- <input type="button" onclick="BuyBtn(item.Id)" value="Buy" class="btn btn-light" /> -->
            <input type="button" onclick="BuyBtn(@item.Id)" value="Buy" class="btn btn-light" />
        </div>

    }
</div>

<script>
    function BuyBtn(Id){
        // alert(Id)
       fetch("https://localhost:7280/api/ProductAPI/" + Id)
         .then((response) => response.json())
        .then((data) => {
        debugger;
        alert(data);
        })
        .catch(error =>{
       // debugger;
      // alert(error);
        })
        alert("Successfull");
    }
</script>


